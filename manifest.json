{
  "name": "AzTube Downloader",
  "version": "0.1",
  "description": "Download YouTube videos!",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "index.html"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": [
        "scripts/browser-polyfill.min.js",
        "scripts/config.js",
        "scripts/download.js",
        "scripts/util.js",
        "scripts/index.js"
      ],
      "css": ["style.css"]
    }
  ],
  "background": {
    "scripts": ["scripts/config.js", "scripts/browser-polyfill.min.js", "scripts/util.js", "scripts/DeviceManager.js", "scripts/background.js"]
  }
}
